# Appwrite Configuration
# Get these from your Appwrite project dashboard
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=YOUR_PROJECT_ID_HERE
VITE_APPWRITE_DATABASE_ID=YOUR_DATABASE_ID_HERE
VITE_APPWRITE_COLLECTION_ID=YOUR_COLLECTION_ID_HERE
VITE_APPWRITE_BUCKET_ID=YOUR_BUCKET_ID_HERE

# Verification Secret
# Use a strong random string (recommended: 32+ characters)
VITE_VERIFICATION_SECRET=CHANGE_THIS_SECRET_TO_RANDOM_STRING

# Admin Authentication
# Generate using: node scripts/generate-password-hash.js
# This is the argon2 hash of your admin password
ADMIN_PASSWORD_HASH=YOUR_ARGON2_HASH_HERE

# Google Gemini API
# Get your API key from Google AI Studio
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE
